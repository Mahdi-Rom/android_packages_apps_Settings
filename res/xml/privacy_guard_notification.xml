<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="privacy_guard_notification"
        android:title="@string/privacy_guard_notification_title"
        android:defaultValue="true"
        android:persistent="false" />

    <CheckBoxPreference
        android:key="privacy_guard_notification_icon"
        android:title="@string/privacy_guard_notification_icon_title"
        android:defaultValue="true"
        android:persistent="false"
        android:dependency="privacy_guard_notification" />

    <CheckBoxPreference
        android:key="privacy_guard_notification_dismiss"
        android:title="@string/privacy_guard_notification_dismiss_title"
        android:summary="@string/privacy_guard_notification_dismiss_summary"
        android:defaultValue="false"
        android:persistent="false"
        android:dependency="privacy_guard_notification" />

</PreferenceScreen>
