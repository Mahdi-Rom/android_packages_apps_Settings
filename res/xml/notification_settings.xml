<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.android.settings.mahdi.SystemSettingSwitchPreference
        android:key="heads_up_enabled"
        android:fragment="com.android.settings.headsup.HeadsUpSettings"
        android:title="@string/category_heads_up"
        android:summary="@string/summary_heads_up" />

    <PreferenceCategory
        android:title="@string/hover_settings_title">

        <ListPreference
            android:key="hover_long_fade_out_delay"
            android:title="@string/hover_long_fadeout_title"
            android:persistent="false"
            android:entries="@array/hover_long_fadeout_entries"
            android:entryValues="@array/hover_long_fadeout_values" />

        <CheckBoxPreference
            android:key="hover_exclude_non_clearable"
            android:title="@string/hover_exclude_non_clearable_title"
            android:summary="@string/hover_exclude_non_clearable_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="hover_exclude_low_priority"
            android:title="@string/hover_exclude_low_priority_title"
            android:summary="@string/hover_exclude_low_priority_summary"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="hover_exclude_topmost"
            android:title="@string/hover_exclude_topmost_title"
            android:summary="@string/hover_exclude_topmost_summary"
            android:defaultValue="false" />        

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/noti_reminder_category">

        <CheckBoxPreference
            android:key="noti_reminder_enabled"
            android:title="@string/noti_reminder_enable_title"
            android:summaryOn="@string/enabled"
            android:summaryOff="@string/disabled"
            android:defaultValue="false" />

        <ListPreference
            android:key="noti_reminder_interval"
            android:defaultValue="1500"
            android:title="@string/noti_reminder_interval"
            android:entries="@array/noti_reminder_interval_entries"
            android:entryValues="@array/noti_reminder_interval_values"
            android:dependency="noti_reminder_enabled" />

        <ListPreference
            android:key="noti_reminder_sound"
            android:defaultValue="0"
            android:title="@string/noti_reminder_sound_title"
            android:entries="@array/noti_reminder_sound_entries"
            android:entryValues="@array/noti_reminder_sound_values"
            android:dependency="noti_reminder_enabled" />

        <RingtonePreference
            android:key="noti_reminder_ringtone"
            android:title="@string/noti_reminder_ringtone"
            android:ringtoneType="all"
            android:showSilent="false"
            android:dependency="noti_reminder_enabled" />

    </PreferenceCategory>

</PreferenceScreen>
